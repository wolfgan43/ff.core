<?xml version="1.0" encoding="utf-8"?>
<configdata>
	<rule id="recruitment">
		<priority>NORMAL</priority>
		<source>^/restricted/recruitment(.*)</source>
		<destination>
			<module>recruitment</module>
			<url>/restricted/recruitment$1</url>
		</destination>
        <reverse>/restricted/recruitment</reverse> 
		<accept_path_info />
	</rule>
    <rule id="recruitment_services">
        <priority>NORMAL</priority>
        <source>^/services(.*)</source>
        <destination>
            <module>recruitment</module>
            <url>/services$1</url>
        </destination>
        <reverse>/services</reverse>
        <accept_path_info />
    </rule>
    
    <rule id="recruitment_submit_cv">
        <priority>NORMAL</priority>
        <source>/lavoro/cv(.*)</source>
        <destination>
            <module>recruitment</module>
            <url>/restricted/recruitment/cv$1</url>
        </destination>
        <reverse>/lavoro/cv</reverse> 
        <accept_path_info />
    </rule>

    <rule id="recruitment_category_cv">
        <priority>NORMAL</priority>
        <source>^/cv/category(.*)</source>
        <destination>
            <module>recruitment</module>
            <url>/restricted/recruitment/category$1</url>
        </destination>
        <reverse>/cv/category</reverse> 
        <accept_path_info />
    </rule>
    
    <rule id="recruitment_subcategory_cv">
        <priority>NORMAL</priority>
        <source>^/cv/subcategory(.*)</source>
        <destination>
            <module>recruitment</module>
            <url>/restricted/recruitment/subcategory$1</url>
        </destination>
        <reverse>/cv/subcategory</reverse> 
        <accept_path_info />
    </rule>
</configdata>

