<?xml version="1.0" encoding="utf-8"?>
<configdata>
	<menu>
		<mention path="/restricted/mention" label="_mention" redir="/restricted/mention/alerts">
			<mention path="/restricted/mention" label="_mention" />
            <alerts path="/restricted/mention/alerts" label="_mention_alerts" />
            <ban path="/restricted/mention/ban" label="_mention_ban" />
            <settings path="/restricted/mention/settings" label="_mention_settings" />
        </mention>
	</menu>
	<settings>
		<mention-general label="mention-general">
			<MOD_MENTION_GROUP_ADMIN label="Group ADMIN" default="mention-admin" required="true" extended_type="Selection" source_SQL = "
				(
					SELECT 
						[CM_TABLE_PREFIX]mod_security_groups.name AS ID
						, [CM_TABLE_PREFIX]mod_security_groups.name AS name
					FROM 
						[CM_TABLE_PREFIX]mod_security_groups
				)
			" />
			<MOD_MENTION_THEME label="Theme" default="mention" />
			<MOD_MENTION_JQUERYUI_THEME label="Theme jQueryUI" default="mention" />
		</mention-general>
		<mention-setting label="mention-setting">
			<MOD_MENTION_CLIENT_ID label="Client ID" default="" />
			<MOD_MENTION_CLIENT_SECRET label="Client Secret" default="" />
			<MOD_MENTION_APP_ID label="App ID" default="" />
			<MOD_MENTION_ACCESS_TOKEN label="Access Token" default="" />
			<MOD_MENTION_KEYWORDS_BY_DB_PREFIX label="Keywords by Database Prefix" default="" />
			<MOD_MENTION_KEYWORDS_BY_DB label="Keywords by Database" default="" extended_type="Selection" source_SQL = "
				(
					SELECT DISTINCT 
						CONCAT( TABLE_NAME,  '.', COLUMN_NAME ) AS ID
						, CONCAT( TABLE_NAME,  '.', COLUMN_NAME ) AS name
					FROM information_schema.COLUMNS
					WHERE TABLE_SCHEMA =  '[FF_DATABASE_NAME]'
				)
			" />
			<MOD_MENTION_KEYWORDS_BY_DB_POSTFIX label="Keywords by Database Postfix" default="" />
			<MOD_MENTION_MAX_ALERTS label="Max Alerts" default="5" />
		</mention-setting>
		<mention-applet>
			<MOD_MENTION_CLASS_BASE_PATH label="Base Path" default="" />
			<MOD_MENTION_CLASS_URL label="Additional Class Url" default="" />
			<MOD_MENTION_CLASS_SOURCE label="Additional Class Source" default="" />
		</mention-applet>
	</settings>
</configdata>
